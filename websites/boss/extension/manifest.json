{
  "manifest_version": 3,
  "name": "BOSS Scraper Bridge",
  "version": "1.0",
  "description": "Extract BOSS jobs and send to local Python server",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["*://www.zhipin.com/*", "http://127.0.0.1:5000/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.zhipin.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_title": "BOSS Scraper"
  }
}
